<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carlo.grabequipment.EditEquipment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2"
            android:layout_weight="0.24"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Edit Equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_edit_equipment"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/MainColor"
            android:layout_margin="10dp" />

        <TextView
            android:text="Equipment Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_new_equipment_name"

            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/MainColor"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/editText_new_equipment_name"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text" />
        <TextView
            android:text="Equipment Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_new_equipment_amount"

            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/MainColor"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_new_equipment_amount"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <Button
            android:text="UPDATE"
            android:layout_height="wrap_content"
            android:id="@+id/button_update"
            android:background="@drawable/rounded_button"
            android:textSize="24sp"
            android:textColor="@android:color/background_light"
            android:hapticFeedbackEnabled="false"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:onClick="edit"
            android:layout_marginTop="35dp" />



    </LinearLayout>

</RelativeLayout>
