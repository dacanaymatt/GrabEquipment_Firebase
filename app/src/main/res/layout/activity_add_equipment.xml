<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_equipment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carlo.grabequipment.AddEquipment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2" />

        <TextView
            android:text="Add Equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/MainColor"
            android:layout_margin="10dp" />

        <TextView
            android:text="Equipment Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_etype"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:ems="10"
            android:id="@+id/editText_etype"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:inputType="text" />

        <TextView
            android:text="Equipment Quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_eamount"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:ems="10"
            android:id="@+id/editText_eamount"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:inputType="number" />



        <Button
            android:text="Add"
            android:layout_height="wrap_content"
            android:id="@+id/button_register"
            android:background="@drawable/rounded_button"
            android:textSize="24sp"
            android:textColor="@android:color/background_light"
            android:hapticFeedbackEnabled="false"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:onClick="add"
            android:layout_marginTop="35dp" />



    </LinearLayout>
</RelativeLayout>
