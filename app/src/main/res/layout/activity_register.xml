<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carlo.grabequipment.Register">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2" />

        <TextView
            android:text="REGISTER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/MainColor"
            android:layout_margin="10dp" />

        <TextView
            android:text="First Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_fname"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_fname"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp" />

        <TextView
            android:text="Last Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_lname"
            android:textAlignment="center"

            android:textSize="20sp"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_lname"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp" />
        <TextView
            android:text="Student ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_id"
            android:textAlignment="center"

            android:textSize="20sp"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_id"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp" />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_password"

            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <TextView
            android:text="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_cpassword"

            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/MainColor"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_cpassword"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext"

            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <Button
            android:text="Register"
            android:layout_height="wrap_content"
            android:id="@+id/button_register"
            android:background="@drawable/rounded_button"
            android:textSize="24sp"
            android:textColor="@android:color/background_light"
            android:layout_margin="5dp"
            android:hapticFeedbackEnabled="false"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:onClick="register"/>



    </LinearLayout>
</RelativeLayout>
